            </div>
          </main>
        </div>
      </div>
    
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
      <script>
       
        
    
        // Grid and List view toggle
        const gridViewBtn = document.getElementById('gridViewBtn');
        const listViewBtn = document.getElementById('listViewBtn');
        const courseContainer = document.getElementById('courseContainer');
    
        gridViewBtn.addEventListener('click', function() {
          courseContainer.classList.remove('list-view');
          courseContainer.classList.add('row-cols-1', 'row-cols-md-2', 'row-cols-lg-3');
        });
    
        listViewBtn.addEventListener('click', function() {
          courseContainer.classList.add('list-view');
          courseContainer.classList.remove('row-cols-1', 'row-cols-md-2', 'row-cols-lg-3');
        });
    
        // Filter functionality
        const filterButtons = document.querySelectorAll('.dropdown-item');
        const courseItems = document.querySelectorAll('.course-item');
    
        filterButtons.forEach(button => {
          button.addEventListener('click', function(e) {
            e.preventDefault();
            const filter = this.dataset.filter;
            
            courseItems.forEach(item => {
              if (filter === 'all' || item.dataset.status === filter) {
                item.classList.remove('hidden');
              } else {
                item.classList.add('hidden');
              }
            });
          });
        });
      </script>
    </body></html>