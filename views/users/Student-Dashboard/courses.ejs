                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star"></i>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer">
                    <a href="#" class="btn btn-primary btn-sm">Continue Course</a>
                  </div>
                </div>
              </div>
    
              <!-- Course 3 -->
