<% layout("/layouts/boilerplate") %>
<style>
  .login-main {
    padding: 60px 60px 30px 60px;
  }

  .login-main-1 {
    border-radius: 30px 0px 0px 30px;
    background: #ecf1f3;
    box-shadow: 5px 5px 10px#c7dbe8,
      -5px -5px 10px #ffffff;
  }

  .login-main-2 h2 {
    font-family: "Lexend", sans-serif;
    color: #000;
  }

  .login-main-2 h6 {
    padding: 10px;
    color: #00000078;
  }

  .email input {
    width: 90% !important;
    padding: 10px;
    padding-left: 30px;
    margin-bottom: 20px;
    border: none;
    border-radius: 30px;
    background: #ECF0F3;
    box-shadow: inset 5px 5px 10px#c7dbe8,
      inset -5px -5px 10px #ffffff;
  }

  .password input {

    width: 90% !important;
    padding: 10px;
    padding-left: 30px;
    margin-bottom: 20px;
    border: none;
    border-radius: 30px;
    background: #ECF0F3;
    box-shadow: inset 5px 5px 10px #c7dbe8,
      inset -5px -5px 10px #ffffff;
  }

  .email input:focus {
    outline: none;
  }

  .password input:focus {
    outline: none;
  }

  .email ::placeholder {
    color: #00000078;
    font-family: "Varela Round", sans-serif;
  }

  .password ::placeholder {
    color: #00000078;
    font-family: "Varela Round", sans-serif;
  }

  .form-check-label {
    color: #00000078;
    font-family: "Varela Round", sans-serif;

  }

  .forgot-password-link {
    text-decoration: none;
  }

  .login-row {
    background: #ecf1f3;
    border-radius: 30px;
    box-shadow: 5px 5px 10px #c4c8ca,
      -5px -5px 10px #ffffff;
  }

  .login-img {
    max-width: 100%;
  }

  .hwatom {
    max-width: 18%;
  }

  #more-tutorials {
    padding: 10px;
  }

  .orange {
    font-size: 20px;
  }

  #more-tutorials i {
    padding-left: 9px;
  }

  #more-tutorials button {
    width: 90%;
    padding: 6px;
    background-color: #000;
    border: none;
    border-radius: 30px;
    color: white;
    font-family: "Varela Round", sans-serif;
  }

  #more-tutorials button:hover {
    background-color: #2baffc;
    border: none;
    color: white;
  }


  .or-login {
    color: #00000078;
    font-family: "Varela Round", sans-serif;
  }

  .social1 button {
