<div class="container-fluid login-main">
  <div class="row login-row">
    <div class="col-sm-12 col-md-6 login-main-1 text-center">
      <img src="../images/login.png" alt="" class="login-img">
    </div>
    <div class="col-sm-12 col-md-6 login-main-2 text-center">
      <a href="../index.html"> <img src="../images/hwatom.png" alt="" class="hwatom "></a>
      <div>
        <a href="../index.html"> <img src="../images/heloworldhead.png" alt="" class="hwatom "></a>
      </div>
      <h2>Welcome back!</h2>
      <h6>Log in to continue learning</h6>

      <form action="/login" method="POST"  class="needs-validation">
        <div class="email">
          <input type="email" placeholder="Email Address" id="email" name="email" required>
        </div>
        <div class="password">
          <input type="password" placeholder="Password" id="password" name="password" required>
        </div>

        <div class="row justify-content-evenly">
          <div class="col-auto">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="rememberMe">
              <label class="form-check-label" for="rememberMe">Remember Me</label>
            </div>
          </div>
          <div class="col-auto forgot">
            <a href="#" class="forgot-password-link">Forgot Password?</a>
          </div>
        </div>

        <div id="more-tutorials" class="col-12 text-center">
          <a href=""><button class="btn  circle pulse orange ">Login <i class="fa-solid fa-forward"></i></button></a>
        </div>
        <p class="or-login">Or Login With</p>
      </form>


      <div class="">
        <div class=" pb-2 social1">
          <a href=""><button class="google bg-danger"><i class="fa-brands fa-google"></i> Google</button></a>
         
        </div>
        <div class=" pb-2 social1">
          <a href=""><button class="linkedin"> <i class="fa-brands fa-linkedin"></i> Linkedin</button></a>         
        </div>

      </div>
      <br>
      <div class="account">
        <h6>Don't have an account? <a href="/user/signup">Sign Up</a></h6>
      </div>

    </div>
  </div>
</div>

