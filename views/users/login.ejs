    border-radius: 30px;
  }

  .social1 i {
    padding-right: 10px;

  }

  .social2 i {
    padding-right: 10px;
  }

  .social2 button {
    border: none;
    color: white;
    width: 130px;
    padding: 10px;

    border-radius: 30px;
  }

  .github {
    background-color: #000;
  }

  .facebook {
    background: #3B5999;
  }

  .linkedin {
    background-color: #0077B5;
  }

  .account {
    color: #00000078;
    font-family: "Varela Round", sans-serif;

  }

  .account h6 {
    padding-top: 0;
  }

  .account a {
    text-decoration: none;
  }

  @media screen and (max-width:768px) {
    .login-main-1 img {
      max-width: 80%;
    }

    .login-main-1 {
      border-radius: 30px 30px 30px 30px;
    }

    .login-main-2 {
      margin-top: 40px;
    }

    .login-main-1 {
      display: none;
    }
  }

  @media screen and (max-width:570px) {
    
  }

  @media screen and (max-width:500px) {
    
  }

