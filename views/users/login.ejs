      padding: 30px 30px 30px 30px;


    }
  }

  @media screen and (max-width:400px) {
  }

  @media screen and (max-width:350px) {
    .form-check {
      padding-right: 0px;
    }

    .forgot {
      padding-left: 0px;
    }
  }

  .rights {
    background-color: #000;
    color: white;
    padding: 20px;
    word-spacing: 3px;

  }

  .rights a {
    text-decoration: none;
  }

  @media screen and (max-width:530px) {
    .rights h6 {
      font-size: 10px;
    }

  }


  .footer-02 {
    background-color: #f4f9fd;
    margin-top: 3rem;
    padding: 20px;
  }
  
