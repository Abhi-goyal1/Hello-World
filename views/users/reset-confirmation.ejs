<% layout("/layouts/boilerplate") %>



<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');
    
    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    
    @keyframes slideIn {
        from { transform: translateY(-20px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }
    
    @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }
    
    @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
    }
    
    @keyframes gradientBG {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }
    
    @keyframes shake {
        0% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        50% { transform: translateX(5px); }
        75% { transform: translateX(-5px); }
        100% { transform: translateX(0); }
    }
    
    @keyframes sendMail {
        0% { transform: translateX(0) translateY(0); opacity: 1; }
        25% { transform: translateX(10px) translateY(-10px); opacity: 0.7; }
        50% { transform: translateX(20px) translateY(-20px); opacity: 0.5; }
        75% { transform: translateX(30px) translateY(-30px); opacity: 0.3; }
        100% { transform: translateX(40px) translateY(-40px); opacity: 0; }
    }
    
    body, html {
       
        height: 100%;
       
        background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
       
       
    }
    
    .containers {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        padding: 20px;
    }
    
    .glass-card {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border: 1px solid rgba(255, 255, 255, 0.18);
        width: 100%;
        max-width: 600px;
        animation: fadeIn 1s ease-out, float 6s ease-in-out infinite;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
   
   
    
    .forget-icon {
        width: 80px;
        height: 80px;
        margin-bottom: 20px;
        animation: slideIn 0.5s ease-out, pulse 2s infinite;
    }
    
    .glass-card h1{
        font-family: 'Poppins', sans-serif;
        color: #000;
        font-size: 2.5em;
        font-weight: 700;
        margin-bottom: 20px;
        animation: slideIn 0.5s ease-out 0.2s both;
    }
    
   .glass-card p{
    font-family: 'Poppins', sans-serif;
        margin-bottom: 30px;
        animation: slideIn 0.5s ease-out 0.4s both;
    }
    
    form {
        animation: slideIn 0.5s ease-out 0.6s both;
    }
    
    input {
        width: 100%;
        padding: 15px !important;
        margin-bottom: 20px;
        border: none;
        border-radius: 50px !important;
        background: rgba(255, 255, 255, 0.5) !important;
        color: #333333;
        font-size: 1em !important;
        transition: all 0.3s ease;
        backdrop-filter: blur(5px) !important;
    }
    
    input::placeholder {
        color: rgba(0, 0, 0, 0.5);
    }
    
    input:focus {
        outline: none !important;
        background: rgba(255, 255, 255, 0.7);
        box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1);
        animation: pulse 0.5s;
    }
    
    .reset-button{
        width: 100%;
        background: rgb(0, 0, 0);
        color: white;
        border: none;
        padding: 15px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 1em;
        margin-top: 10px;
        cursor: pointer;
        border-radius: 50px;
        transition: all 0.3s ease;
        backdrop-filter: blur(5px);
        position: relative;
        overflow: hidden;
        font-weight: 600;
    }
    
    .reset-button:hover {
        background: #2baffc;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    .back-link {
        display: inline-block;
        text-align: center;
        margin-top: 20px;
        font-weight: 600;
        color: black;
        text-decoration: none;
        transition: all 0.3s ease;
        animation: slideIn 0.5s ease-out 0.8s both;
        position: relative;
    }
    
    .back-link::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 2px;
        bottom: -2px;
        left: 0;
        background-color: #333333;
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }
    
    .back-link:hover::after {
        transform: scaleX(1);
    }
    
    .back-link:hover {
        text-shadow: 0 0 10px rgba(0,0,0,0.2);
    }
    
    .error {
        animation: shake 0.5s;
    }
    
    .mail-icon {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        width: 24px;
        height: 24px;
        opacity: 0;
        transition: opacity 0.3s;
    }
    
    .sending .mail-icon {
        opacity: 1;
        animation: sendMail 1s ease-out infinite;
    }


    @media screen and (max-width:455px) {
        .glass-card h1{
        
        font-size: 2em;
       
    }
    
   .glass-card p{
    font-size: 1em;
        margin-bottom: 30px;
        
    }
    }
    </style>
    </head>
    <body>
    <div class="containers">
        <div class="glass-card">
            <div class="loading-bar"></div>
            <div class="container">
                <img src="/images/hwatom.png" alt="Email sent icon" class="icon" width="100" height="100">
                <h1>Check Your Email</h1>
                <p>We've sent password reset instructions to your email address. Please check your inbox and follow the link to reset your password.</p>
                <p>If you don't see the email, please check your spam folder.</p>
                <a href="/login" class="reset-button">Return to Login <i class="fa-solid fa-share-from-square px-1"></i></a>
            </div>
        </div>
    </div>
    
    <script>
    document.getElementById('resetForm').addEventListener('submit', function(e) {
        e.preventDefault();
        const email = document.getElementById('emailInput').value;
        console.log(`Password reset requested for: ${email}`);
        
        // Validate email
        if (!isValidEmail(email)) {
            const input = document.getElementById('emailInput');
            input.classList.add('error');
            setTimeout(() => input.classList.remove('error'), 500);
            return;
        }
    
        // Animate the button
        const button = this.querySelector('button');
        button.classList.add('sending');
        button.disabled = true;
        button.innerHTML = 'Sending... <svg class="mail-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>';
    
        // Simulating a successful password reset request with a delay
        setTimeout(() => {
            alert(`Password reset instructions have been sent to ${email}`);
            window.location.href = '/reset-confirmation';
        }, 3000);
    });
    
    // Add a subtle animation to the input when focused
    document.getElementById('emailInput').addEventListener('focus', function() {
        this.style.animation = 'pulse 0.5s';
    });
    
    document.getElementById('emailInput').addEventListener('blur', function() {
        this.style.animation = '';
    });
    
    function isValidEmail(email) {
        const re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
        return re.test(String(email).toLowerCase());
    }
    
    // Add floating animation to the card
    document.querySelector('.glass-card').addEventListener('mousemove', function(e) {
        const { left, top, width, height } = this.getBoundingClientRect();
        const x = (e.clientX - left) / width;
        const y = (e.clientY - top) / height;
        
        this.style.transform = `perspective(1000px) rotateY(${x * 10}deg) rotateX(${y * -10}deg) translateZ(20px)`;
    });
    
    document.querySelector('.glass-card').addEventListener('mouseleave', function() {
        this.style.transform = 'perspective(1000px) rotateY(0deg) rotateX(0deg) translateZ(0px)';
    });
    </script>
    </body>
    </html>