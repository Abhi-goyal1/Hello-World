          previewEmail.textContent = email;
          previewPhone.textContent = phone;
          previewLocation.textContent = location;
          previewJobTitle.textContent = jobTitle;
          previewSummary.textContent = summary;
          previewExperience.textContent = experience;
          previewEducation.textContent = education;
          previewCertifications.textContent = certifications;
  
          // Clear previous skills
          previewSkills.innerHTML = '';
          // Add new skill tags
          skills.split(',').forEach(skill => {
              const skillTag = document.createElement('span');
              skillTag.className = 'skill-tag animate__animated animate__fadeIn';
              skillTag.textContent = skill.trim();
              previewSkills.appendChild(skillTag);
          });
  
          // Add animation to updated sections
          document.querySelectorAll('.resume-section').forEach(section => {
              section.classList.add('animate__animated', 'animate__fadeIn');
              section.addEventListener('animationend', () => {
                  section.classList.remove('animate__animated', 'animate__fadeIn');
              });
          });
      }
  
      // Make resume sections draggable
      const resumeSections = document.getElementById('resumeSections');
      let draggedItem = null;
  
      resumeSections.addEventListener('dragstart', (e) => {
          draggedItem = e.target;
          setTimeout(() => {
              e.target.style.opacity = '0.5';
          }, 0);
      });
  
      resumeSections.addEventListener('dragend', (e) => {
          setTimeout(() => {
              e.target.style.opacity = '1';
              draggedItem = null;
          }, 0);
      });
  
      resumeSections.addEventListener('dragover', (e) => {
          e.preventDefault();
          const afterElement = getDragAfterElement(resumeSections, e.clientY);
          const draggable = document.querySelector('.dragging');
          if (afterElement == null) {
              resumeSections.appendChild(draggedItem);
          } else {
              resumeSections.insertBefore(draggedItem, afterElement);
          }
      });
  
      function getDragAfterElement(container, y) {
          const draggableElements = [...container.querySelectorAll('.draggable:not(.dragging)')];
  
          return draggableElements.reduce((closest, child) => {
              const box = child.getBoundingClientRect();
              const offset = y - box.top - box.height / 2;
              if (offset < 0 && offset > closest.offset) {
                  return { offset: offset, element: child };
              } else {
                  return closest;
              }
          }, { offset: Number.NEGATIVE_INFINITY }).element;
      }
  
      // Download resume functionality (this is a placeholder, actual PDF generation would require a backend or a library)
      downloadButton.addEventListener('click', () => {
          alert('Your resume is being prepared for download. In a real application, this would generate and download a PDF.');
      });
  
      // Add animations on scroll
      const animateOnScroll = () => {
          const elements = document.querySelectorAll('.animate__animated:not(.animate__animated--triggered)');
          elements.forEach(element => {
              if (isElementInViewport(element)) {
                  element.classList.add('animate__animated--triggered');
              }
          });
      };
  
      function isElementInViewport(el) {
          const rect = el.getBoundingClientRect();
          return (
              rect.top >= 0 &&
              rect.left >= 0 &&
              rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
              rect.right <= (window.innerWidth || document.documentElement.clientWidth)
          );
      }
  
      window.addEventListener('scroll', animateOnScroll);
      animateOnScroll(); // Initial check on page load
  });
  </script>
  
