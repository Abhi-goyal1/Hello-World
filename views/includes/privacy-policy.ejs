<% layout("/layouts/boilerplate") %>


    <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap');
   
    
    body {
      
        background-color: #000000;
    }
    
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }
    
  
    
    .privacy-header {
        background-color: #111111;
        text-align: center;
        padding: 100px 0 50px;
        position: relative;
    }
    
    .lock-icon {
        font-size: 100px;
        color: #3498db;
        margin-bottom: 20px;
    }
    
    .privacy-title {
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        font-size: 3rem;
        color: #ecf0f1;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }
    
    .privacy-subtitle {
        font-size: 1.2rem;
        color: #bdc3c7;
        max-width: 800px;
        margin: 0 auto;
    }
    
    .privacy-policy {
        padding: 50px 0;
        background-color: #1F1F1F;

    }
    
    .policy-section {
        background-color: #191919;
        padding: 30px;
        margin-bottom: 30px;
        border-radius: 10px;
        box-shadow: 3px 3px 15px rgb(0, 0, 0), -3px -3px 15px rgb(58, 58, 58);
        transition: all 0.3s ease;
    }
    

    
    .policy-section h2 {
        font-family: 'Poppins', sans-serif;
        color: #3498db;
        margin-bottom: 20px;
        font-size: 1.8rem;
    }
    
    .policy-section p, .policy-section ul {
        color: #aaa;
        margin-bottom: 15px;
    }
    
    .policy-section ul {
        padding-left: 20px;
    }
    
    .policy-section li {
        margin-bottom: 10px;
    }
    
    .policy-navigation {
        position: fixed;
        top: 50%;
        right: 20px;
        transform: translateY(-50%);
        background-color: rgba(52, 152, 219, 0.1);
        padding: 10px;
        border-radius: 10px;
    }
    
    .policy-navigation ul {
        list-style-type: none;
    }
    
    .policy-navigation li {
        margin-bottom: 10px;
    }
    
    .policy-navigation a {
        color: #3498db;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }
    
    .policy-navigation a:hover {
        color: #2980b9;
    }
    
    .interactive-element {
        background-color: #2c3e50;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
    }
    
    .interactive-element h3 {
        color: #3498db;
        margin-bottom: 10px;
    }
    
    .toggle-button {
        background-color: #3498db;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    
    .toggle-button:hover {
        background-color: #2980b9;
    }
    
    .hidden-content {
        display: none;
        margin-top: 10px;
        padding: 10px;
        background-color: #34495e;
        border-radius: 5px;
    }
    
    
    
    @media (max-width: 768px) {
        .privacy-header{
            padding-top: 60px;
            padding-bottom: 90px;
        }
        .privacy-title {
            font-size: 2.5rem;
        }
        
        .privacy-subtitle {
            font-size: 1rem;
        }
        
        .policy-section h2 {
            font-size: 1.5rem;
        }
    
        .policy-navigation {
            display: none;
        }
    }
    </style>
    </head>
    <body>
    
        <main>
            <section class="privacy-header">
                <div class="container">
                    <div class="lock-icon">ðŸ”’</div>
                    <h1 class="privacy-title">Privacy Policy</h1>
                    <p class="privacy-subtitle">Your privacy is important to us. This policy outlines how we collect, use, and protect your personal information.</p>
