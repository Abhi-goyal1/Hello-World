  }

  /* .action .profile {
    line-height: 20px !important;
  } */

  /* .action .profile img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  } */

  .action .menu {
    position: absolute;
    top: 120px;
    right: -20px;
    background-color: #F4F9FD;
    /* padding: 10px 0px; */
    /* background-color: #2baffc; */
    /* border: 2px solid #2baffc; */
    width: 200px;
    box-sizing: 0 5px 25px rgba(0, 0, 0, 0.1);
    border-radius: 15px;
    transition: 0.5s;
    visibility: hidden;
    opacity: 0;
  }

  .action .menu.active {
    top: 50px;
    visibility: visible;
    opacity: 1;
  }

  .action .menu::before {
    content: "";
    position: absolute;
    top: -5px;
    right: 28px;
    width: 20px;
    height: 20px;
    background-color: #F4F9FD;
    /* border: 2px solid #2baffc; */
    transform: rotate(45deg);
  }

  .action .menu h3 {
    width: 100%;
    text-align: center;
    font-size: 18px;
    padding: 20px 0;
    font-weight: 500;
    color: white;
    line-height: 1.5em;
  }

  .action .menu h3 span {
    font-size: 14px;
    color: #cecece;
    font-weight: 300;
  }

  .action .menu ul li {
    list-style: none;
    padding: 15px 0;
    color: white;
    display: flex;
    align-items: center;
  }

  .action .menu ul {

  }

  div.menu.active::after {
    background: none;
  }

  .action .menu ul li img {
    max-width: 20px;
    margin-right: 10px;
    opacity: 0.5;
    transition: 0.5s;
  }

  .action .menu ul li:hover img {
    opacity: 1;
  }

  .action .menu ul li a {
    display: inline-block;
    text-decoration: none;
    color: black;
    font-weight: 700;
    transition: 0.5s;
  }

  .action .menu ul li:hover a {
    color: #2baffc;
  }

  .btn-close {
    font-size: 30px;
  }

  .nav-links.active::after {
    background-color: #2baffc00;
  }

  .nav-links {
    margin-bottom: 0px !important;
  }

  .menu-icon {
    color: white;
    margin: 2px !important;
    line-height: 1.3;
    display: none;
  }

  @media screen and (max-width: 998px) {
    .menu-icon {

      display: block;
    }
  }
