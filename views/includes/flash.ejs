<style>
    @media only screen and (max-width: 580px) {
        .alert {
            padding: 6px;
            font-size: 10px;
        }
        .alertbtn {
            padding: 10px !important;
        }
    }

    @media only screen and (max-width: 350px) {
        .alert {
            padding: 3px;
            font-size: 10px;
        }
        .alertbtn {
            padding: 5px !important;
        }
    }
    /* Add the overlay style */
    .overlay {
        position: fixed;
        width: 100%;
        z-index: 1000;
    }
    .alert-success {
        color: #2BAFFC;
        font-size: 1.2rem;
        font-weight: 500;
    }
    .alert-danger {
        font-size: 1.2rem;
        font-weight: 500;
    }
    .alertbtn {
        font-size: 1.2rem;
    }
</style>

<% if(success && success.length) { %>
<div class="overlay">
    <div class="alert alert-success alert-dismissible fade show col-md-8 offset-md-2 col-sm-10 offset-sm-1 mt-3 text-center"
        role="alert">
        <i class="fa-solid fa-circle-check"></i>
        <%= success %>
        <button type="button" class="btn-close alertbtn" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>
<% } %>

<% if(error && error.length) { %>
<div class="overlay">
    <div class="alert alert-danger alert-dismissible fade show col-md-8 col-sm-10 offset-sm-1 offset-md-2 mt-3 text-center"
        role="alert">
        <i class="fa-solid fa-triangle-exclamation"></i>
        <%= error %>
        <button type="button" class="btn-close alertbtn" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
</div>
<% } %>