<div class="container mt-5">
    <h1 class="text-center mb-4 fun-underline"><%= category %> Questions</h1>

    <% questions.forEach(question => { %>
        <div class="question">
            <h5>Question:</h5>
            <p><%= question.question %></p>
            <h5>Answer:</h5>
            <p><%= question.answer %></p>
        </div>
    <% }) %>
    <!-- <div class="text-center mt-4">
        <button id="downloadPdf" class="btn btn-primary">Download as PDF</button>
    </div> -->
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
    const buttons = document.querySelectorAll(".show-answer");
    buttons.forEach(button => {
        button.addEventListener("click", function () {
            const answer = this.nextElementSibling;
            answer.style.display = answer.style.display === "block" ? "none" : "block";
        });
    });
});

</script>

<script>
    document.getElementById('downloadPdf').addEventListener('click', function() {
        const { jsPDF } = window.jspdf;

        const pdf = new jsPDF();

        // Add watermark
        pdf.setFontSize(40);
        pdf.setTextColor(150);
        pdf.text(35, 80, 'Hello World', { angle: 45 });

        // Convert HTML to canvas
        html2canvas(document.body).then(canvas => {
            const imgData = canvas.toDataURL('image/png');
            pdf.addImage(imgData, 'PNG', 10, 10);
            pdf.save('<%= category %>_questions.pdf');
        });
    });
</script>