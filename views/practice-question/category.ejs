<% layout("/layouts/boilerplate") %>


<style>
 
.containerss {
    width: 80%;
    margin: auto;
    overflow: hidden;
}

h1 {
    text-align: center;
    margin: 30px;
    margin-bottom: 50px;
    font-size: 3.5rem;
    font-weight: 600;
    text-transform:capitalize;
    color:#2baffc;
    
    
}

.categories {
    display: flex;
    justify-content: center;
    margin-top: 30px;
}

.category {
    background-color: #007BFF;
    color: white;
    padding: 15px 25px;
    margin: 10px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s;
}

.category:hover {
    background-color: #0056b3;
}

.question {
    background-color: white;
    padding: 20px;
    margin: 50px 0;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

pre {
    background-color: #f8f8f8;
    padding: 10px;
    border-radius: 5px;
    overflow-x: auto;
}

button.show-answer {
    background-color: #28a745;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

button.show-answer:hover {
    background-color: #218838;
}

p.answer {
    display: none;
    margin-top: 10px;
    color: #333;
    background-color: #e9ecef;
    padding: 10px;
    border-radius: 5px;
}



.fun-underline {
  position: relative;
}

.fun-underline::after {
  content: '';
  position: absolute;
  left: 35%;
  bottom: -10px;
  height: 3px;
  width: 30%;
background: black;
  border-radius: 5px;

  animation: underline-animation 5s linear infinite;
}



</style>


