<% layout("/layouts/boilerplate") %>


<style>
 

.containerss {
    width: 80%;
    margin: auto;
    overflow: hidden;
}

.containerss {
    text-align: center;
    padding: 20px;
}

h1 {
    text-align: center;
    margin-top: 20px;
    color: #333;
    padding: 20px;
}

.categories {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 15px;
    justify-items: center;
    margin-top: 30px;
}

.category {
    background-color: white;
    color: black;
    padding: 10px;
    margin: 20px;
    text-decoration: none;
    border-radius: 10px;
    transition: transform 0.3s, box-shadow 0.3s;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.category img {
    width: 100%;
    height: 150px;
    object-fit: cover;
}

.category span {
    padding: 15px;
    font-size: 1.2em;
    font-weight: bold;
}

.category:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
}

.question {
    background-color: white;
    padding: 20px;
    margin: 20px 0;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

pre {
    background-color: #f8f8f8;
    padding: 10px;
    border-radius: 5px;
    overflow-x: auto;
}

button.show-answer {
    background-color: #28a745;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

button.show-answer:hover {
    background-color: #218838;
}

p.answer {
    display: none;
    margin-top: 10px;
    color: #333;
    background-color: #e9ecef;
    padding: 10px;
    border-radius: 5px;
}


    </style>


